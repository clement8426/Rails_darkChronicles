<div class="row mt-4">
  <% if @groups.present? %>
    <% @groups.each do |group| %>
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title"><%= group.name.capitalize %></h5>
            <p class="card-text">MJ: <%= group.maitre_de_jeu.name %></p>

            <ul class="list-group list-group-flush">
              <h6 class="card-subtitle mb-2 text-muted">Joueurs :</h6>
              <% group.joueurs.each do |player| %>
          <li class="list-group-item d-flex justify-content-between align-items-center">
            <%= player.name %>
            <%= button_to remove_user_group_path(group, player), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm', remote: true do %>
              <svg xmlns="http://www.w3.org/2000/svg" height="16" width="14" viewBox="0 0 448 512">
                <path d="M135.2 17.7L128 32H32C14.3 32 0 46.3 0 64S14.3 96 32 96H416c17.7 0 32-14.3 32-32s-14.3-32-32-32H320l-7.2-14.3C307.4 6.8 296.3 0 284.2 0H163.8c-12.1 0-23.2 6.8-28.6 17.7zM416 128H32L53.2 467c1.6 25.3 22.6 45 47.9 45H346.9c25.3 0 46.3-19.7 47.9-45L416 128z"/>
              </svg>
            <% end %>
          </li>
              <% end %>
            </ul>

            <%= link_to "Ajouter un utilisateur", add_user_group_path(group), class: 'btn btn-secondary btn-sm mt-2' %>
            <%= link_to "Voir le groupe", group_path(group), class: 'btn btn-secondary btn-sm mt-2' %>
              <%= button_to "Supprimer", group_path(group), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm mt-2', remote: true %>
          </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <p>Aucun groupes</p>
  <% end %>
</div>
