<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2>Changer votre mot de passe</h2>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form' }) do |f| %>
        <%= f.error_notification %>

        <%= f.input :reset_password_token, as: :hidden %>
        <%= f.full_error :reset_password_token %>

        <div class="form-group">
          <%= f.label :password, "Nouveau mot de passe" %>
          <%= f.input :password,
                      required: true,
                      autofocus: true,
                      hint: ("#{@minimum_password_length} caractÃ¨res minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password", class: 'form-control' }, label: false %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "Confirmez votre nouveau mot de passe" %>
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password", class: 'form-control' }, label: false %>
        </div>

        <div class="form-group">
          <%= f.button :submit, "Changer mon mot de passe", class: 'btn btn-secondary' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
