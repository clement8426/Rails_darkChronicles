<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2>Change your password</h2>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'form' }) do |f| %>
        <%= f.error_notification %>

        <%= f.input :reset_password_token, as: :hidden %>
        <%= f.full_error :reset_password_token %>

        <div class="form-group">
          <%= f.label :password, "New password" %>
          <%= f.input :password,
                      required: true,
                      autofocus: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password", class: 'form-control' }, label: false %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "Confirm your new password" %>
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password", class: 'form-control' }, label: false %>
        </div>

        <div class="form-group">
          <%= f.button :submit, "Change my password", class: 'btn btn-secondary' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
