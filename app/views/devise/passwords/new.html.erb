<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2>Mot de passe oublié ?</h2>

      <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'form' }) do |f| %>
        <%= f.error_notification %>

        <div class="form-group">
          <%= f.label :email %>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: 'form-control' }, label: false %>
        </div>

        <div class="form-group">
          <%= f.button :submit, "Envoyer les instructions de réinitialisation du mot de passe", class: 'btn btn-secondary' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
