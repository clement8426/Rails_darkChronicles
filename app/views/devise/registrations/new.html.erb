<!-- app/views/devise/registrations/new.html.erb -->
<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2>Inscription</h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form' }) do |f| %>
        <%= f.error_notification %>

        <div class="form-group">
          <%= f.label :email, "Adresse e-mail" %>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: 'form-control' }, label: false %>
        </div>

        <div class="form-group">
          <%= f.label :password, "Mot de passe" %>
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} caractères minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password", class: 'form-control' }, label: false %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "Confirmation du mot de passe" %>
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password", class: 'form-control' }, label: false %>
        </div>

        <div class="form-group">
          <%= f.label :account_type, "Type de compte" %>
          <%= f.select :account_type, User.account_types.keys.map { |type| [type.humanize, type] }, { include_blank: 'Vous êtes Joueur ou Mj' }, { required: true, class: 'form-control' } %>
        </div>

        <div class="form-group">
          <%= f.label :name, "Nom" %>
          <%= f.input :name,
                      required: true,
                      input_html: { autocomplete: "name", class: 'form-control' }, label: false %>
        </div>

        <div class="form-group">
          <%= f.label :description, "Description" %>
          <%= f.input :description,
                      required: true,
                      input_html: { autocomplete: "description", class: 'form-control' }, label: false %>
        </div>

        <div class="form-group">
          <%= f.button :submit, "S'inscrire", class: 'btn btn-secondary' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
