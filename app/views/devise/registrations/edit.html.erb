<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2>Modifier <%= resource_name.to_s.humanize %></h2>

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: 'form' }) do |f| %>
        <%= f.error_notification %>

        <div class="form-group">
          <%= f.label :email, "Adresse e-mail" %>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: 'form-control' }, label: false %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <p>Actuellement en attente de confirmation pour : <%= resource.unconfirmed_email %></p>
        <% end %>

        <div class="form-group">
          <%= f.label :password, "Mot de passe" %>
          <%= f.input :password,
                      hint: "Laissez vide si vous ne souhaitez pas le changer",
                      required: false,
                      input_html: { autocomplete: "new-password", class: 'form-control' }, label: false %>
        </div>

        <div class="form-group">
          <%= f.label :password_confirmation, "Confirmation du mot de passe" %>
          <%= f.input :password_confirmation,
                      required: false,
                      input_html: { autocomplete: "new-password", class: 'form-control' }, label: false %>
        </div>

        <div class="form-group">
          <%= f.label :current_password, "Mot de passe actuel" %>
          <%= f.input :current_password,
                      hint: "Nous avons besoin de votre mot de passe actuel pour confirmer vos modifications",
                      required: true,
                      input_html: { autocomplete: "current-password", class: 'form-control' }, label: false %>
        </div>

        <div class="form-group">
          <%= f.label :account_type, "Type de compte" %>
          <%= f.select :account_type, User.account_types.keys.map { |type| [type.humanize, type] }, { include_blank: 'Sélectionner le type de compte' }, class: 'form-control', label: false %>
        </div>

        <div class="form-group">
          <%= f.label :name, "Nom" %>
          <%= f.input :name,
                      required: true,
                      input_html: { class: 'form-control' }, label: false %>
        </div>

        <div class="form-group">
          <%= f.label :description, "Description" %>
          <%= f.input :description,
                      required: true,
                      input_html: { class: 'form-control' }, label: false %>
        </div>

        <div class="form-group">
          <%= f.button :submit, "Mettre à jour", class: 'btn btn-secondary' %>
        </div>
      <% end %>

      <div class="mt-3">
        <%= link_to "Retour", :back, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>
