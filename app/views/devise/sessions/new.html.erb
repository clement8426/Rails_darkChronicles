<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <h2>Connexion</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form' }) do |f| %>
        <div class="form-group">
          <%= f.label :email, "Adresse e-mail" %>
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      input_html: { autocomplete: "email", class: 'form-control' }, label: false %>
        </div>

        <div class="form-group">
          <%= f.label :password, "Mot de passe" %>
          <%= f.input :password,
                      required: false,
                      input_html: { autocomplete: "current-password", class: 'form-control' }, label: false %>
        </div>

        <div class="form-group">
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-group">
          <%= f.button :submit, "Se connecter", class: 'btn btn-secondary' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
